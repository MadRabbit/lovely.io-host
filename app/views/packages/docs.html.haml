- if @document
  %h1= @document.path.sub(/^docs\//, '').sub(/\.md$/, '')

  = md @document.text

  %p.bottom-links
    = link_to 'Index', package_docs_path(@package, :version => params[:version]), :class => :back

- else
  %h1 Documentation Index

  %ul
    - @package.documents.api.sort_by(&:path).each do |doc|
      - doc_id = doc.path.sub(/^docs\//, '').sub(/\.md$/, '')
      %li= link_to doc_id, package_docs_path(@package, :version => params[:version], :doc_id => doc_id)