%h1 Profile details

.avatar-block
  = user_avatar_link @user

%dl.profile
  %dt Full name
  %dd= @user.name

  %dt Home url
  %dd= link_to @user.home_url, @user.home_url unless @user.home_url.blank?

  %dt Packages
  %dd= link_to "packages by this user", user_packages_path(@user)

  - if @user == current_user
    %dt Email
    %dd= @user.email

    %dt Authentication Token
    %dd= link_to "Create new auth-token", token_profile_path

%p.bottom-links
  - if logged_in?
    = link_to "Edit", edit_profile_path, :class => :edit